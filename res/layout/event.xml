<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center_vertical" android:baselineAligned="false"
                android:background="@drawable/bg">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            style="@style/BackStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_margin="8dp"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="203dp"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
            android:layout_above="@+id/back_button" android:layout_margin="10dp">
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/text" android:layout_marginLeft="10dp"
                    style="@style/TextStyle" />
        </TableLayout>
    </ScrollView>
</RelativeLayout>