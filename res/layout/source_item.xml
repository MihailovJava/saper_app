<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="16dp"
                android:id="@+id/title" android:layout_gravity="left|center_vertical"
                style="@style/SpinerSelectTextStyle"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true" android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/title" android:singleLine="false" android:textStyle="bold"
                android:maxLines="2" android:layout_marginLeft="16dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:maxLines="3"
                android:id="@+id/description"
                android:layout_gravity="left|center_vertical"
                style="@style/SpinerItemTextStyle"
                android:paddingTop="5dp" android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:layout_alignLeft="@+id/title" android:layout_below="@+id/description"
                android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"/>


    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            />

</LinearLayout>