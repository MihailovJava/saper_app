<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:maxLines="3"
                android:id="@+id/city"
                android:layout_gravity="left|center_vertical"
                style="@style/SpinerItemTextStyle"
                android:paddingTop="5dp" android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:layout_alignLeft="@+id/title" android:layout_below="@+id/title"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/date" android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                android:layout_alignParentTop="true" android:layout_alignBottom="@+id/city"
                android:gravity="center_vertical|center_horizontal"
                style="@style/AfishaTimeTextStyle"
                android:textStyle="bold" android:layout_margin="2dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="16dp"
            android:id="@+id/title" android:layout_gravity="left|center_vertical"
            style="@style/SpinerSelectTextStyle" android:paddingLeft="10dp" android:paddingTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true" android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/date" android:singleLine="false" android:textStyle="bold"
            android:maxLines="2"/>



</LinearLayout>