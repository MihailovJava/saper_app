<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@drawable/bg">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:src="@drawable/title_logo" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            style="@style/BackStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" android:paddingTop="10px" android:paddingBottom="10px"
            android:paddingRight="20px" android:paddingLeft="20px" android:textSize="15dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="113dp"
            android:layout_below="@+id/date" android:layout_centerHorizontal="true"
            android:layout_above="@+id/back_button" android:layout_margin="16dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fajr"
                    android:layout_weight="1"
                    android:id="@+id/textView1"
                    style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_fajr"

                      android:button="@drawable/alarm_style"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_weight="1"
                    android:id="@+id/textView2" android:layout_gravity="center_horizontal|top" android:gravity="right"
                    android:textColor="#034700" android:textStyle="bold"
                    style="@style/NamasText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout1">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Sunrise"
                      android:layout_weight="1" android:id="@+id/textView3"
                      style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_sunrise"
                      android:button="@drawable/alarm_style"
                       />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="00:00"
                      android:layout_weight="1" android:id="@+id/textView4"
                      android:layout_gravity="center_horizontal|top" android:gravity="right"
                      android:textColor="#034700" android:textStyle="bold"
                      style="@style/NamasText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout2">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Dhuhr"
                      android:layout_weight="1" android:id="@+id/textView5"
                      style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_duhr"
                      android:button="@drawable/alarm_style"
                    />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="00:00"
                      android:layout_weight="1" android:id="@+id/textView6"
                      android:layout_gravity="center_horizontal|top" android:gravity="right"
                      android:textColor="#034700" android:textStyle="bold"
                      style="@style/NamasText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout3">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Asr"
                      android:layout_weight="1" android:id="@+id/textView7"
                      style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_asr"
                      android:button="@drawable/alarm_style"
                    />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="00:00"
                      android:layout_weight="1" android:id="@+id/textView8"
                      android:layout_gravity="center_horizontal|top" android:gravity="right"
                      android:textColor="#034700" android:textStyle="bold"
                      style="@style/NamasText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout4">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Maghrib"
                      android:layout_weight="1" android:id="@+id/textView9"
                      style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_maghrib"
                      android:button="@drawable/alarm_style"
                    />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="00:00"
                      android:layout_weight="1" android:id="@+id/textView10"
                      android:layout_gravity="center_horizontal|top" android:gravity="right"
                      android:textColor="#034700" android:textStyle="bold"
                      style="@style/NamasText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout5">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Isha"
                      android:layout_weight="1" android:id="@+id/textView11"
                      style="@style/NamasText" android:autoText="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="0" android:id="@+id/alarm_isha"
                      android:button="@drawable/alarm_style"
                    />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="00:00"
                      android:layout_weight="1" android:id="@+id/textView12"
                      android:layout_gravity="center_horizontal|top" android:gravity="right"
                      android:textColor="#034700" android:textStyle="bold"
                      style="@style/NamasText"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сегодня: 1 дек 1970"
            android:id="@+id/date" android:layout_centerHorizontal="true" android:layout_below="@+id/imageView"
            android:textStyle="bold" android:textColor="#002e0e" style="@style/NamasText" android:textSize="15dp"/>
</RelativeLayout>