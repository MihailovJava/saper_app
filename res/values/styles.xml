<?xml version="1.0" encoding="utf-8"?>
<resources>


     <style name="SpinerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spiner</item>
    </style>

    <style name="SpinerSelectTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="AfishaTimeTextStyle">
        <item name="android:textColor">@color/afisha_time_text_color</item>
    </style>

    <style name="ButtonStyle" parent="android:Holo.Light.ButtonBar">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="SpinerItemTextStyle" >
      <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainTheme" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ab_back</item>
    </style>

</resources>